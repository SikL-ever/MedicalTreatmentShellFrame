<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <RelativeLayout
            android:background="#f00"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50">

        <ImageView
                android:id="@+id/head"
                android:layout_centerVertical="true"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"/>

        <TextView
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_toRightOf="@+id/head"
                android:layout_centerVertical="true"
                android:id="@+id/names"
                android:text="大富科技"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </RelativeLayout>

    <TextView
            android:layout_marginTop="14dp"
            android:text="王克强温壮解琦小聂小北小四老四，刘"
            android:lineHeight="@dimen/dp_20"
            android:textSize="12sp"
            android:textColor="#333333"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50">

        <TextView
                android:text="2019/7/31"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <ImageView
                android:id="@+id/zan"
                android:layout_toLeftOf="@+id/zannums"
                android:layout_marginRight="6dp"
                android:layout_centerVertical="true"
                android:background="@drawable/zhichi"
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_16"/>

        <TextView
                android:id="@+id/zannums"
                android:layout_width="wrap_content"
                android:text="12"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/fandui"
                android:layout_marginRight="@dimen/dp_24"
                android:layout_height="wrap_content"/>

        <ImageView
                android:id="@+id/fandui"
                android:layout_marginRight="@dimen/dp_6"
                android:layout_toLeftOf="@+id/fanduinums"
                android:background="@drawable/fadui"
                android:layout_centerVertical="true"
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_16"/>

        <TextView
                android:id="@+id/fanduinums"
                android:layout_marginRight="@dimen/dp_14"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/image_caina"
                android:text="15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <ImageView
                android:id="@+id/image_caina"
                android:layout_toLeftOf="@+id/caina"
                android:layout_centerVertical="true"
                android:layout_marginRight="6dp"
                android:background="@drawable/cainadraware"
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_16"/>

        <TextView
                android:text="采纳"
                android:id="@+id/caina"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


    </RelativeLayout>

</LinearLayout>