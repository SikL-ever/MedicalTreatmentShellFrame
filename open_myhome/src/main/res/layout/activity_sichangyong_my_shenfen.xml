<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".childthreeactivity.SichangyongMyShenfenActivity">
    <ImageView
        android:id="@+id/oneimage"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_170"
        android:layout_marginLeft="@dimen/dp_50"
        android:layout_marginRight="@dimen/dp_50"
        android:layout_marginTop="@dimen/dp_50"
        android:background="@drawable/id_card_front"/>
    <ImageView
        android:layout_below="@id/oneimage"
        android:id="@+id/twoimage"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_170"
        android:layout_marginLeft="@dimen/dp_50"
        android:layout_marginRight="@dimen/dp_50"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@drawable/id_card_back"/>
    <Button
        android:id="@+id/mybangbe"
        android:background="@drawable/myusernew_bt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="绑定"
        android:textColor="#fff"
        android:textSize="@dimen/dp_14"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp_60"
        android:layout_marginRight="@dimen/dp_30"
        android:layout_marginLeft="@dimen/dp_30"
        />
</RelativeLayout>