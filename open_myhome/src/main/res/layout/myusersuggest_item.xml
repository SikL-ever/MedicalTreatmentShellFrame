<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/suggestitem_image"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:layout_marginTop="@dimen/dp_20"/>
        <TextView
            android:id="@+id/suggestitem_name"
            android:layout_below="@id/suggestitem_image"
            android:layout_width="@dimen/dp_50"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="张三"
            android:padding="@dimen/dp_5"
            android:layout_marginBottom="@dimen/dp_20"/>
        <TextView
            android:textSize="@dimen/dp_14"
            android:textColor="#000"
            android:id="@+id/suggesttime_title"
            android:layout_alignTop="@id/suggestitem_image"
            android:layout_toRightOf="@id/suggestitem_image"
            android:layout_marginLeft="@dimen/dp_40"
            android:text="神经性脑瘤"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textSize="@dimen/dp_12"
            android:textColor="#000"
            android:layout_marginTop="@dimen/dp_10"
            android:id="@+id/suggestitem_bing"
            android:layout_below="@id/suggesttime_title"
            android:layout_toRightOf="@id/suggestitem_image"
            android:layout_marginLeft="@dimen/dp_40"
            android:text="神经性脑瘤"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/suggestitem_time"
            android:textColor="#000"
            android:textSize="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_below="@id/suggestitem_bing"
            android:layout_toRightOf="@id/suggestitem_image"
            android:layout_marginLeft="@dimen/dp_40"
            android:text="神经性脑瘤"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_below="@+id/suggestitem_name"
            android:background="@drawable/dividing_line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="我的建议"
            android:textSize="@dimen/dp_14"
            android:textColor="#333"/>
        <TextView
            android:id="@+id/suggestitem_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ssssss"
            android:textSize="@dimen/dp_12"
            android:textColor="#333333"
            android:lineHeight="@dimen/dp_16"/>
    </LinearLayout>
</LinearLayout>