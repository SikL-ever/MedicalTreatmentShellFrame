<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MyUserActivity"
    android:orientation="vertical"
    android:background="#fff">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_280"
            android:background="@drawable/my_background"/>
        <RelativeLayout
            android:layout_marginTop="@dimen/dp_40"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/myuserfinish"
                android:layout_centerVertical="true"
                android:layout_width="@dimen/sp_16"
                android:layout_height="@dimen/sp_16"
                android:background="@drawable/common_icon_back_white_n"/>

            <ImageView
                android:id="@+id/myusermessage"
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_26"
                android:layout_alignParentRight="true"
                android:background="@drawable/common_nav_message_white_n" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/two"
            android:layout_marginTop="@dimen/dp_80"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/myuserheadportrait"
                android:layout_centerVertical="true"
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_50"
                android:background="@drawable/evaluation_icon_angry_n"/>
            <TextView
                android:id="@+id/myusername"
                android:layout_toRightOf="@+id/myuserheadportrait"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="昵称正在加载"
                android:textColor="#fff"
                android:textSize="@dimen/sp_16"
                android:layout_centerVertical="true"
                />
            <Button
                android:id="@+id/myuserQiandao"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="@dimen/dp_58"
                android:layout_height="@dimen/dp_30"
                android:text="签到"
                android:background="@drawable/myuser_button"
                android:textColor="#3287EA"/>
        </RelativeLayout>
        <androidx.cardview.widget.CardView
            android:layout_below="@id/two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/dp_5"
            app:cardElevation="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_marginBottom="@dimen/dp_5">
            <LinearLayout
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginBottom="@dimen/dp_20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="我的问诊"
                    android:textSize="@dimen/sp_16"
                    android:textColor="#000"
                    />
                <RelativeLayout
                    android:id="@+id/myusernew"
                    android:layout_marginTop="@dimen/dp_24"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/dangqian"
                        android:layout_width="@dimen/dp_40"
                        android:layout_height="@dimen/dp_40"
                        android:background="@drawable/the_current_inquiry"
                        />
                    <TextView
                        android:layout_toRightOf="@id/dangqian"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="当前问诊"
                        android:textColor="#000"
                        android:textSize="@dimen/dp_14"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp_20"
                        />
                    <ImageView
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/my_icon_next_n"
                        android:layout_width="@dimen/dp_15"
                        android:layout_height="@dimen/dp_20" />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/myuserhistory"
                    android:layout_marginTop="@dimen/dp_24"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/listhi"
                        android:layout_width="@dimen/dp_40"
                        android:layout_height="@dimen/dp_40"
                        android:background="@drawable/historical_inquiry"
                        />
                    <TextView
                        android:layout_toRightOf="@id/listhi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="历史问诊"
                        android:textColor="#000"
                        android:textSize="@dimen/dp_14"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp_20"
                        />
                    <ImageView
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/my_icon_next_n"
                        android:layout_width="@dimen/dp_15"
                        android:layout_height="@dimen/dp_20" />
                </RelativeLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_30"
        android:orientation="vertical">




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/myuserrecord"
                android:layout_marginRight="@dimen/dp_30"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:layout_gravity="center_horizontal"
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:background="@drawable/my_icon_file_n"/>
                <TextView
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的档案"
                    android:layout_marginTop="@dimen/dp_10"
                    android:textSize="@dimen/dp_12"
                    android:textColor="#000"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/myuserwallet"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:layout_gravity="center_horizontal"
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:background="@drawable/my_icon_wallet_n"/>
                <TextView
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的钱包"
                    android:layout_marginTop="@dimen/dp_10"
                    android:textSize="@dimen/dp_12"
                    android:textColor="#000"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/myusercollect"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:layout_gravity="center_horizontal"
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:background="@drawable/common_button_collection_small_n"/>
                <TextView
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的收藏"
                    android:layout_marginTop="@dimen/dp_10"
                    android:textSize="@dimen/dp_12"
                    android:textColor="#000"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/dp_40"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/myusersuggest"
                android:layout_marginRight="@dimen/dp_25"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:layout_gravity="center_horizontal"
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:background="@drawable/my_icon_advice_n"/>
                <TextView
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="被采纳的建议"
                    android:layout_marginTop="@dimen/dp_10"
                    android:textSize="@dimen/dp_12"
                    android:textColor="#000"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/myuservideo"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:layout_gravity="center_horizontal"
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:background="@drawable/my_icon_video_n"/>
                <TextView
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的视频"
                    android:layout_marginTop="@dimen/dp_10"
                    android:textSize="@dimen/dp_12"
                    android:textColor="#000"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/myuserfriend"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="31dp"
                    android:layout_height="@dimen/dp_30"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/my_icon_circle_n" />
                <TextView
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的病友圈"
                    android:layout_marginTop="@dimen/dp_10"
                    android:textSize="@dimen/dp_12"
                    android:textColor="#000"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/myuserattention"
            android:layout_marginTop="@dimen/dp_40"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_marginRight="@dimen/dp_30"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:layout_gravity="center_horizontal"
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:background="@drawable/common_icon_attention_large_n"/>
                <TextView
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的关注"
                    android:layout_marginTop="@dimen/dp_10"
                    android:textSize="@dimen/dp_12"
                    android:textColor="#000"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/myusertask"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:layout_gravity="center_horizontal"
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:background="@drawable/my_icon_task_n"/>
                <TextView
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的任务"
                    android:layout_marginTop="@dimen/dp_10"
                    android:textSize="@dimen/dp_12"
                    android:textColor="#000"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/myuserset"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="31dp"
                    android:layout_height="@dimen/dp_30"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/my_icon_set_n" />
                <TextView
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="设置管理"
                    android:layout_marginTop="@dimen/dp_10"
                    android:textSize="@dimen/dp_12"
                    android:textColor="#000"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>