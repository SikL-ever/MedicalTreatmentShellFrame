<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_10"
        app:cardElevation="5dp"
        >

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_140">
            <TextView
                    android:visibility="gone"
                    android:background="@android:color/holo_red_dark"
                    android:textColor="@android:color/white"
                    android:id="@+id/guanzhu_image_view_view"
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_alignParentRight="true"
                    android:text="取消关注"
                    android:textSize="@dimen/dp_18" />
            <LinearLayout
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_20"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:orientation="horizontal"
                    android:layout_width="@dimen/dp_320"
                    android:layout_height="@dimen/dp_120">
                <ImageView
                        android:id="@+id/doctorimage"
                        android:layout_margin="@dimen/dp_10"
                        android:layout_width="65dp"
                        android:layout_height="@dimen/dp_100" />
                <LinearLayout
                        android:layout_marginTop="@dimen/sp_10"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_100">
                    <RelativeLayout
                            android:layout_marginTop="@dimen/dp_15"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        <TextView
                                android:textColor="#000"
                                android:id="@+id/name_title"
                                android:text="小小美"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        <TextView
                                android:id="@+id/professional"
                                android:layout_toRightOf="@+id/name_title"
                                android:layout_marginLeft="@dimen/dp_20"
                                android:layout_centerVertical="true"
                                android:textSize="@dimen/sp_10"
                                android:textColor="#333333"
                                android:text="主任医师"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                    </RelativeLayout>
                    <TextView
                            android:id="@+id/content_title"
                            android:layout_marginTop="@dimen/dp_14"
                            android:text="第三方卡的咖啡机"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    <RelativeLayout
                            android:layout_marginTop="@dimen/dp_16"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        <TextView
                                android:text="好评率"
                                android:id="@+id/ss"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                        <TextView
                                android:id="@+id/good"
                                android:layout_toRightOf="@+id/ss"
                                android:text="98%"
                                android:layout_marginLeft="@dimen/dp_10"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        <TextView
                                android:layout_toRightOf="@+id/good"
                                android:layout_marginLeft="@dimen/dp_20"
                                android:id="@+id/patient"
                                android:text="服务患者数"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        <TextView
                                android:layout_toRightOf="@+id/patient"
                                android:layout_marginLeft="@dimen/dp_10"
                                android:id="@+id/patient_nums"
                                android:text="20%"

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>