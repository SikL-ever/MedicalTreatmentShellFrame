    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.TzActivity">
    <com.wd.MyHome.util.TopView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_alignParentTop="true"
        android:background="#fff"
        android:gravity="center_vertical"
        android:id="@+id/tz_top">
    </com.wd.MyHome.util.TopView>
    <TextView
        android:id="@+id/tz_wc"
        android:text="完成"
        android:layout_width="@dimen/dp_52"
        android:layout_height="@dimen/dp_24"
        android:background="@drawable/wc"
        android:layout_alignParentRight="true"
        android:padding="@dimen/dp_2"
        android:button="@null"
        android:gravity="center"
        android:textColor="#fff"
        android:layout_marginTop="@dimen/dp_13"
        android:layout_marginRight="@dimen/dp_20"/>



    <ScrollView
        android:layout_below="@+id/tz_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:id="@+id/sg"
                android:layout_marginTop="@dimen/dp_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                >

                <ImageView
                    android:id="@+id/g"
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:src="@drawable/my_icon_height_n"/>
                <TextView
                    android:text="身高"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignBottom="@+id/g"
                    android:layout_alignTop="@+id/g"
                    android:layout_toRightOf="@+id/g"
                    android:layout_marginLeft="@dimen/dp_6"/>
                <com.wd.MyHome.util.IndicatorStayLayout
                    android:id="@+id/custom_indicator_by_java"
                    android:layout_below="@+id/g"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_40"
                    ></com.wd.MyHome.util.IndicatorStayLayout>

                <TextView
                    android:layout_below="@+id/custom_indicator_by_java"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginLeft="@dimen/dp_25"
                    android:layout_marginBottom="@dimen/dp_18"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_14"
                    android:textColor="#333333"
                    android:text="50cm"/>
                <TextView
                    android:layout_below="@+id/custom_indicator_by_java"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginBottom="@dimen/dp_18"
