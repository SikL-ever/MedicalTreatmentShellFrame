<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- 第一层  上部和左部偏移一定距离-->

    <item
        android:bottom="@dimen/dp_2"
        android:right="@dimen/dp_2"
        android:left="3dp"
        android:top="3dp">
        <shape>
            <solid android:color="#f5f5f5" />
            <!-- 描边 -->
            <corners android:topRightRadius="@dimen/dp_5"
                android:topLeftRadius="@dimen/dp_5"
                android:bottomLeftRadius="@dimen/dp_5"
                android:bottomRightRadius="@dimen/dp_5"/>
        </shape>
    </item>
    <!-- 第二层 下部和有部偏移一定距离-->
    <item
        android:top="@dimen/dp_2"
        android:left="@dimen/dp_2"
        android:bottom="@dimen/dp_6"
        android:right="@dimen/dp_2">
        <shape>
            <solid android:color="#ffffff" />
            <!-- 描边 -->
            <corners android:topRightRadius="@dimen/dp_5"
                android:topLeftRadius="@dimen/dp_5"
                android:bottomLeftRadius="@dimen/dp_5"
                android:bottomRightRadius="@dimen/dp_5"/>

            <stroke android:width="0.33dp" android:color="#dedede" />
        </shape>
    </item>
</layer-list>