<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bw.message.childactivity.SystemActivity"
    android:orientation="vertical">
    <RelativeLayout
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginLeft="@dimen/dp_20"
            android:id="@+id/systemfinish"
            android:layout_centerVertical="true"
            android:layout_width="@dimen/sp_16"
            android:layout_height="@dimen/sp_16"
            android:background="@drawable/common_icon_white_n"/>
        <TextView
            android:textColor="#000"
            android:textSize="@dimen/dp_16"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_5"
            android:text="系统消息"
            />
    </RelativeLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginTop="@dimen/dp_5"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/systemrecycler">
    </androidx.recyclerview.widget.RecyclerView>
</LinearLayout>
