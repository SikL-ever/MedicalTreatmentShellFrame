<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.wardActivity.PublishActivity">


        <FrameLayout
            android:id="@+id/frameLayout_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_60"
                        android:background="#fff">

                        <ImageView
                            android:id="@+id/one_img"
                            android:layout_width="@dimen/dp_32"
                            android:layout_height="@dimen/dp_32"
                            android:layout_alignParentLeft="true"
                            android:layout_marginLeft="@dimen/dp_20"
                            android:layout_marginTop="@dimen/dp_15"
                            android:src="@drawable/doctor" />

                        <ImageView
                            android:id="@+id/one_tz"
                            android:layout_width="@dimen/dp_24"
                            android:layout_height="@dimen/dp_24"
                            android:layout_alignParentRight="true"
                            android:layout_marginLeft="@dimen/dp_24"
                            android:layout_marginTop="@dimen/dp_20"
                            android:layout_marginRight="@dimen/dp_20"
                            android:src="@drawable/bull" />
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_6"
                        android:background="#fff">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_marginTop="@dimen/dp_20"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="@dimen/dp_20">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="*"
                                    android:textColor="#3087ea"/>
                                <EditText
                                    android:background="@null"
                                    android:id="@+id/x_name"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/sp_20"
                                    android:layout_centerVertical="true"
                                    android:hint="请输入标题(最多20个字)"
                                    android:textColorHint="#7b7272"
                                    android:textSize="@dimen/sp_14" />
                            </RelativeLayout>

                            <View

                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginLeft="@dimen/dp_20"
                                android:layout_marginTop="@dimen/dp_10"
                                android:layout_marginRight="@dimen/dp_20"
                                android:background="#ccc9c9" />

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="@dimen/dp_20">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="*"
                                    android:textColor="#3087ea"/>
                                <TextView
                                    android:id="@+id/x_ks"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/sp_20"
                                    android:layout_marginTop="@dimen/dp_12"
                                    android:hint="请选择就诊科室"
                                    android:textColorHint="#333"
                                    android:textSize="@dimen/sp_14" />

                                <ImageView
                                    android:id="@+id/ks_pop"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_marginTop="@dimen/dp_25"
                                    android:layout_marginRight="@dimen/dp_10"
                                    android:src="@drawable/circle_icon_drop_down_n" />
                            </RelativeLayout>

                            <View
                                android:id="@+id/ks_x"
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginLeft="@dimen/dp_20"
                                android:layout_marginTop="@dimen/dp_10"
                                android:layout_marginRight="@dimen/dp_20"
                                android:background="#ccc9c9" />

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="@dimen/dp_20">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="*"
                                    android:textColor="#3087ea"/>
                                <TextView
                                    android:id="@+id/x_bz"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/sp_20"
                                    android:layout_marginTop="@dimen/dp_12"
                                    android:hint="请选择主要病症"
                                    android:textColorHint="#333"
                                    android:textSize="@dimen/sp_14" />

                                <ImageView
                                    android:id="@+id/bz_pop"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_marginTop="@dimen/dp_25"
                                    android:layout_marginRight="@dimen/dp_10"
                                    android:src="@drawable/circle_icon_drop_down_n" />
                            </RelativeLayout>

                            <View
                                android:id="@+id/bz_x"
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginLeft="@dimen/dp_20"
                                android:layout_marginTop="@dimen/dp_10"
                                android:layout_marginRight="@dimen/dp_20"
                                android:background="#ccc9c9" />

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="@dimen/dp_20">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="*"
                                    android:textColor="#3087ea"/>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/sp_20"
                                    android:layout_marginTop="@dimen/dp_12"
                                    android:hint="请输入病症详情"
                                    android:textColor="#9f9696"
                                    android:textSize="@dimen/sp_14" />

                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="@dimen/dp_20">

                                <EditText
                                    android:background="@null"
                                    android:id="@+id/x_bzxq"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/dp_100"
                                    android:layout_marginTop="@dimen/dp_16" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/x_bzxq"
                                    android:layout_alignParentRight="true"
                                    android:text="不超过200字"
                                    android:textColor="#3087ea"
                                    android:textSize="@dimen/sp_10" />
                            </RelativeLayout>
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginLeft="@dimen/dp_20"
                                android:layout_marginTop="@dimen/dp_10"
                                android:layout_marginRight="@dimen/dp_20"
                                android:background="#ccc9c9" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="@dimen/dp_20"
                                android:layout_marginTop="@dimen/dp_16"
                                android:text="请输入最近一段治疗经历"
                                android:textColor="#333333"
                                android:textSize="@dimen/sp_14" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="@dimen/dp_20"
                                android:layout_marginTop="@dimen/dp_10"
                                android:background="@drawable/button2"
                                android:orientation="vertical">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <EditText
                                        android:background="@null"
                                        android:id="@+id/x_yy_name"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/dp_10"
                                        android:layout_marginTop="@dimen/dp_12"
                                        android:hint="请输入医院名称"
                                        android:textColorHint="#7b7272"
                                        android:textSize="@dimen/sp_14" />
                                </RelativeLayout>

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:layout_marginHorizontal="@dimen/dp_20"
                                    android:layout_marginTop="@dimen/dp_10"
                                    android:background="#736d6d" />

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <TextView
                                        android:id="@+id/start_text"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/dp_10"
                                        android:layout_marginTop="@dimen/dp_12"
                                        android:hint="选择开始时间"
                                        android:textColorHint="#333"
                                        android:textSize="@dimen/sp_14" />

                                    <ImageView
                                        android:id="@+id/start_time"
                                        android:layout_width="@dimen/dp_30"
                                        android:layout_height="@dimen/dp_30"
                                        android:layout_alignParentRight="true"
                                        android:layout_marginTop="@dimen/dp_25"
                                        android:layout_marginRight="@dimen/dp_10"
                                        android:src="@drawable/circle_icon_drop_down_n"/>
                                </RelativeLayout>

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:layout_marginHorizontal="@dimen/dp_20"
                                    android:layout_marginTop="@dimen/dp_10"
                                    android:background="#736d6d" />

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <TextView
                                        android:id="@+id/stop_text"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/dp_10"
                                        android:layout_marginTop="@dimen/dp_12"
                                        android:hint="选择结束时间"
                                        android:textColorHint="#333"
                                        android:textSize="@dimen/sp_14" />

                                    <ImageView
                                        android:id="@+id/stop_time"
                                        android:layout_width="@dimen/dp_25"
                                        android:layout_height="@dimen/dp_25"
                                        android:layout_alignParentRight="true"
                                        android:layout_marginTop="@dimen/dp_25"
                                        android:layout_marginRight="@dimen/dp_10"
                                        android:src="@drawable/circle_icon_drop_down_n" />
                                </RelativeLayout>

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:layout_marginHorizontal="@dimen/dp_20"
                                    android:layout_marginTop="@dimen/dp_10"
                                    android:background="#736d6d" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/sp_10"
                                    android:layout_marginTop="@dimen/dp_12"
                                    android:hint="请输入治疗过程"
                                    android:textColor="#9f9696"
                                    android:textSize="@dimen/sp_14" />

                                <EditText
                                    android:background="@null"
                                    android:id="@+id/x_zlgc"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/dp_100"
                                    android:layout_marginTop="@dimen/dp_16" />
                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginHorizontal="@dimen/dp_20"
                                android:layout_marginTop="@dimen/dp_10"
                                android:background="#eee" />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp_30"
                                android:layout_marginTop="@dimen/dp_20"
                                android:background="#eee"
                                android:gravity="center_vertical"
                                android:paddingLeft="@dimen/dp_20"
                                android:text="最多可添加6张图片;长按为图片排序"
                                android:textSize="@dimen/sp_12" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="@dimen/dp_20"
                                android:layout_marginTop="@dimen/dp_20">

                                <ImageView
                                    android:id="@+id/add_image"
                                    android:layout_width="@dimen/dp_72"
                                    android:layout_height="@dimen/dp_72"
                                    android:src="@drawable/add" />
                            </LinearLayout>
                            
                            <RelativeLayout
                                android:layout_marginTop="@dimen/dp_20"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/dp_30"
                                    android:background="#eee"
                                    android:gravity="center_vertical"
                                    android:paddingLeft="@dimen/dp_20"
                                    android:text="提升悬赏额度"
                                    android:textSize="@dimen/sp_12" />

                                <com.suke.widget.SwitchButton
                                    android:id="@+id/switchbutton"
                                    android:layout_width="@dimen/dp_40"
                                    android:layout_height="@dimen/dp_20"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:layout_weight="0.8"
                                    android:layout_marginRight="@dimen/dp_20"
                                    app:sb_checked="true"
                                    app:sb_checked_color="#3087ea"
                                    app:sb_show_indicator="false" />
                            </RelativeLayout>
                           

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dp_20"
                                android:layout_marginTop="@dimen/dp_20"
                                android:text="提升额度可获得更多的关注"
                                android:textSize="@dimen/sp_10" />

                            <LinearLayout
                                android:visibility="gone"
                                android:id="@+id/linear"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <LinearLayout
                                    android:layout_marginLeft="@dimen/dp_20"
                                    android:layout_marginRight="@dimen/dp_20"
                                    android:layout_marginTop="@dimen/dp_10"
                                    android:layout_width="match_parent"
                                    android:orientation="horizontal"
                                    android:layout_height="@dimen/dp_52">
                                    <Button
                                        android:text="10H币"
                                        android:layout_weight="1"
                                        android:layout_marginRight="@dimen/dp_6"
                                        android:background="@drawable/button2"
                                        android:layout_width="@dimen/dp_0"
                                        android:layout_height="@dimen/dp_52" />
                                    <Button
                                        android:text="20H币"
                                        android:layout_weight="1"
                                        android:layout_marginRight="@dimen/dp_6"
                                        android:background="@drawable/button2"
                                        android:layout_width="@dimen/dp_0"
                                        android:layout_height="@dimen/dp_52" />
                                    <Button
                                        android:text="30H币"
                                        android:layout_weight="1"
                                        android:background="@drawable/button2"
                                        android:layout_width="@dimen/dp_0"
                                        android:layout_height="@dimen/dp_52" />
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_marginTop="@dimen/dp_10"
                                    android:layout_marginLeft="@dimen/dp_20"
                                    android:layout_marginRight="@dimen/dp_20"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/dp_52"
                                    android:orientation="horizontal">
                                    <Button
                                        android:text="自定义"
                                        android:layout_weight="1"
                                        android:background="@drawable/button2"
                                        android:layout_width="@dimen/dp_0"
                                        android:layout_marginRight="@dimen/dp_6"
                                        android:layout_height="@dimen/dp_52" />
                                    <RelativeLayout
                                        android:layout_weight="2"
                                        android:layout_width="@dimen/dp_0"
                                        android:layout_height="match_parent">
                                        <TextView
                                            android:id="@+id/H"
                                            android:textSize="@dimen/sp_12"
                                            android:text="当前H币余额 200 不足？"
                                            android:layout_width="wrap_content"
                                            android:layout_alignParentBottom="true"
                                            android:layout_height="wrap_content" />
                                        <TextView
                                            android:id="@+id/chongzhi"
                                            android:layout_toRightOf="@+id/H"
                                            android:text="充值"
                                            android:layout_alignParentBottom="true"
                                            android:textColor="#3087ea"
                                            android:textSize="@dimen/sp_12"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content" />
                                    </RelativeLayout>
                                </LinearLayout>
                            </LinearLayout>


                            <Button
                                android:id="@+id/x_fb"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="@dimen/dp_20"
                                android:layout_marginTop="@dimen/dp_20"
                                android:layout_marginBottom="@dimen/dp_20"
                                android:background="#3087ea"
                                android:text="发表"
                                android:textColor="#ffffff"
                                android:textSize="@dimen/sp_14" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>
        </FrameLayout>
</LinearLayout>