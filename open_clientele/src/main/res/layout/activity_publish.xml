<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.wardActivity.PublishActivity">


    <FrameLayout
        android:id="@+id/frameLayout_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_60"
                    android:background="#fff">

                    <ImageView
                        android:id="@+id/one_img"
                        android:layout_width="@dimen/dp_32"
                        android:layout_height="@dimen/dp_32"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:layout_marginTop="@dimen/dp_15"
                        android:src="@drawable/doctor" />

                    <ImageView
                        android:id="@+id/one_tz"
                        android:layout_width="@dimen/dp_24"
                        android:layout_height="@dimen/dp_24"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="@dimen/dp_24"
                        android:layout_marginTop="@dimen/dp_20"
                        android:layout_marginRight="@dimen/dp_20"
                        android:src="@drawable/bull" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_6"
                    android:background="#fff">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/dp_20"
                            android:layout_marginTop="@dimen/dp_20">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="*"
                                android:textColor="#3087ea" />

                            <EditText
                                android:id="@+id/title"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/sp_20"
                                android:background="@null"
                                android:hint="请输入标题(最多20个字)"
                                android:textColorHint="#7b7272"
                                android:textSize="@dimen/sp_14" />
                        </RelativeLayout>

                        <View

                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginLeft="@dimen/dp_20"
                            android:layout_marginTop="@dimen/dp_10"
                            android:layout_marginRight="@dimen/dp_20"
                            android:background="#ccc9c9" />

                        <RelativeLayout
                            android:id="@+id/layouta"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/dp_20">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="*"
                                android:textColor="#3087ea" />

                            <TextView
                                android:id="@+id/x_ks"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/sp_20"
                                android:layout_marginTop="@dimen/dp_12"
                                android:hint="请选择就诊科室"
                                android:textColorHint="#333"
                                android:textSize="@dimen/sp_14" />

                            <ImageView
                                android:id="@+id/xuanze_pop"
                                android:layout_width="@dimen/dp_16"
                                android:layout_height="@dimen/dp_16"
                                android:layout_alignParentRight="true"
                                android:layout_marginTop="@dimen/dp_25"
                                android:layout_marginRight="@dimen/dp_10"
                                android:src="@drawable/circle_icon_drop_down_n" />
                        </RelativeLayout>

                        <View
                            android:id="@+id/ks_x"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginLeft="@dimen/dp_20"
                            android:layout_marginTop="@dimen/dp_10"
                            android:layout_marginRight="@dimen/dp_20"
                            android:background="#ccc9c9" />

                        <RelativeLayout
                            android:id="@+id/two_ress"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/dp_20">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="*"
                                android:textColor="#3087ea" />

                            <TextView
                                android:id="@+id/x_bz"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/sp_20"
                                android:layout_marginTop="@dimen/dp_12"
                                android:hint="请选择主要病症"
                                android:textColorHint="#333"
                                android:textSize="@dimen/sp_14" />

                            <ImageView
                                android:id="@+id/bz_pop"
                                android:layout_width="@dimen/dp_16"
                                android:layout_height="@dimen/dp_16"
                                android:layout_alignParentRight="true"
                                android:layout_marginTop="@dimen/dp_25"
                                android:layout_marginRight="@dimen/dp_10"
                                android:src="@drawable/circle_icon_drop_down_n" />
                        </RelativeLayout>

                        <View
                            android:id="@+id/bz_x"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginLeft="@dimen/dp_20"
                            android:layout_marginTop="@dimen/dp_10"
                            android:layout_marginRight="@dimen/dp_20"
                            android:background="#ccc9c9" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/dp_20">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="*"
                                android:textColor="#3087ea" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/sp_20"
                                android:layout_marginTop="@dimen/dp_12"
                                android:hint="请输入病症详情"
                                android:textColor="#9f9696"
                                android:textSize="@dimen/sp_14" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/dp_20">

                            <EditText
                                android:id="@+id/Treatmentdetails"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp_100"
                                android:layout_alignParentStart="true"
                                android:layout_marginTop="@dimen/dp_16"
                                android:background="@null" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/Treatmentdetails"
                                android:layout_alignParentRight="true"
                                android:text="不超过200字"
                                android:textColor="#3087ea"
                                android:textSize="@dimen/sp_10" />
                        </RelativeLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginLeft="@dimen/dp_20"
                            android:layout_marginTop="@dimen/dp_10"
                            android:layout_marginRight="@dimen/dp_20"
                            android:background="#ccc9c9" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/dp_20"
                            android:layout_marginTop="@dimen/dp_16"
                            android:text="请输入最近一段治疗经历"
                            android:textColor="#333333"
                            android:textSize="@dimen/sp_14" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/dp_20"
                            android:layout_marginTop="@dimen/dp_10"
                            android:background="@drawable/button2"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <EditText
                                    android:id="@+id/hospital_name"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/dp_10"
                                    android:layout_marginTop="@dimen/dp_12"
                                    android:background="@null"
                                    android:hint="请输入医院名称"
                                    android:textColorHint="#7b7272"
                                    android:textSize="@dimen/sp_14" />
                            </RelativeLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginHorizontal="@dimen/dp_20"
                                android:layout_marginTop="@dimen/dp_10"
                                android:background="#736d6d" />

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/start_text"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/dp_10"
                                    android:layout_marginTop="@dimen/dp_12"
                                    android:hint="选择开始时间"
                                    android:textColorHint="#333"
                                    android:textSize="@dimen/sp_14" />

                                <ImageView
                                    android:id="@+id/start_time"
                                    android:layout_width="@dimen/dp_16"
                                    android:layout_height="@dimen/dp_16"
                                    android:layout_alignParentRight="true"
                                    android:layout_marginTop="@dimen/dp_25"
                                    android:layout_marginRight="@dimen/dp_10"
                                    android:src="@drawable/circle_icon_drop_down_n" />
                            </RelativeLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginHorizontal="@dimen/dp_20"
                                android:layout_marginTop="@dimen/dp_10"
                                android:background="#736d6d" />

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/stop_text"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/dp_10"
                                    android:layout_marginTop="@dimen/dp_12"
                                    android:hint="选择结束时间"
                                    android:textColorHint="#333"
                                    android:textSize="@dimen/sp_14" />

                                <ImageView
                                    android:id="@+id/stop_time"
                                    android:layout_width="@dimen/dp_16"
                                    android:layout_height="@dimen/dp_16"
                                    android:layout_alignParentRight="true"
                                    android:layout_marginTop="@dimen/dp_25"
                                    android:layout_marginRight="@dimen/dp_10"
                                    android:src="@drawable/circle_icon_drop_down_n" />
                            </RelativeLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginHorizontal="@dimen/dp_20"
                                android:layout_marginTop="@dimen/dp_10"
                                android:background="#736d6d" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/sp_10"
                                android:layout_marginTop="@dimen/dp_12"
                                android:hint="请输入治疗过程"
                                android:textColor="#9f9696"
                                android:textSize="@dimen/sp_14" />

                            <EditText
                                android:id="@+id/therapeutic"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp_100"
                                android:layout_marginTop="@dimen/dp_16"
                                android:layout_marginLeft="@dimen/dp_10"
                                android:layout_marginRight="@dimen/dp_10"
                                android:background="@null" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginHorizontal="@dimen/dp_20"
                            android:layout_marginTop="@dimen/dp_10"
                            android:background="#eee" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_30"
                            android:layout_marginTop="@dimen/dp_20"
                            android:background="#eee"
                            android:gravity="center_vertical"
                            android:paddingLeft="@dimen/dp_20"
                            android:text="最多可添加6张图片;长按为图片排序"
                            android:textSize="@dimen/sp_12" />

                            <GridView
                                android:layout_marginTop="@dimen/dp_10"
                                android:id="@+id/addrecord_recycler"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:columnWidth="60dp"
                                android:horizontalSpacing="10dp"
                                android:numColumns="auto_fit"
                                android:verticalSpacing="10dp"
                                android:layout_marginRight="@dimen/dp_20"
                                android:layout_marginLeft="@dimen/dp_20"/>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_20">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp_30"
                                android:background="#eee"
                                android:gravity="center_vertical"
                                android:paddingLeft="@dimen/dp_20"
                                android:text="提升悬赏额度"
                                android:textSize="@dimen/sp_12" />

                            <com.suke.widget.SwitchButton
                                android:id="@+id/switchbutton"
                                android:layout_width="@dimen/dp_40"
                                android:layout_height="@dimen/dp_20"
                                android:layout_alignParentRight="true"
                                android:layout_alignParentBottom="true"
                                android:layout_marginRight="@dimen/dp_20"
                                android:layout_marginBottom="5dp"
                                android:layout_weight="0.8"
                                app:sb_checked="true"
                                app:sb_checked_color="#3087ea"
                                app:sb_show_indicator="false" />
                        </RelativeLayout>


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_20"
                            android:layout_marginTop="@dimen/dp_20"
                            android:text="提升额度可获得更多的关注"
                            android:textSize="@dimen/sp_10" />

                        <LinearLayout
                            android:id="@+id/linear"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp_52"
                                android:layout_marginLeft="@dimen/dp_20"
                                android:layout_marginTop="@dimen/dp_10"
                                android:layout_marginRight="@dimen/dp_20"
                                android:orientation="horizontal">

                                <Button
                                    android:layout_width="@dimen/dp_0"
                                    android:layout_height="@dimen/dp_52"
                                    android:layout_marginRight="@dimen/dp_6"
                                    android:layout_weight="1"
                                    android:background="@drawable/button2"
                                    android:text="10H币" />

                                <Button
                                    android:layout_width="@dimen/dp_0"
                                    android:layout_height="@dimen/dp_52"
                                    android:layout_marginRight="@dimen/dp_6"
                                    android:layout_weight="1"
                                    android:background="@drawable/button2"
                                    android:text="20H币" />

                                <Button
                                    android:layout_width="@dimen/dp_0"
                                    android:layout_height="@dimen/dp_52"
                                    android:layout_weight="1"
                                    android:background="@drawable/button2"
                                    android:text="30H币" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp_52"
                                android:layout_marginLeft="@dimen/dp_20"
                                android:layout_marginTop="@dimen/dp_10"
                                android:layout_marginRight="@dimen/dp_20"
                                android:orientation="horizontal">

                                <Button
                                    android:layout_width="@dimen/dp_0"
                                    android:layout_height="@dimen/dp_52"
                                    android:layout_marginRight="@dimen/dp_6"
                                    android:layout_weight="1"
                                    android:background="@drawable/button2"
                                    android:text="自定义" />

                                <RelativeLayout
                                    android:layout_width="@dimen/dp_0"
                                    android:layout_height="match_parent"
                                    android:layout_weight="2">

                                    <TextView
                                        android:id="@+id/H"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentBottom="true"
                                        android:text="当前H币余额 200 不足？"
                                        android:textSize="@dimen/sp_12" />

                                    <TextView
                                        android:id="@+id/chongzhi"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentBottom="true"
                                        android:layout_toRightOf="@+id/H"
                                        android:text="充值"
                                        android:textColor="#3087ea"
                                        android:textSize="@dimen/sp_12" />
                                </RelativeLayout>
                            </LinearLayout>
                        </LinearLayout>


                        <Button
                            android:id="@+id/publish"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/dp_20"
                            android:layout_marginTop="@dimen/dp_20"
                            android:layout_marginBottom="@dimen/dp_20"
                            android:background="#3087ea"
                            android:text="发表"
                            android:textColor="#ffffff"
                            android:textSize="@dimen/sp_14" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </FrameLayout>
</LinearLayout>