<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_30">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="购买"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:textColor="#000"
            android:textSize="@dimen/dp_14" />
        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/videopopuoonefinish"
            android:layout_alignParentRight="true"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_15"
            android:background="@drawable/common_icon_drop_down_n"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:background="@drawable/recorded_message"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_80"
            android:layout_centerHorizontal="true"
            android:id="@+id/videopopupimage"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="300H币"
            android:textSize="@dimen/dp_14"
            android:textColor="#d92109"
            android:layout_below="@id/videopopupimage"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_10"
            android:id="@+id/videopopupmyprice"/>
        <LinearLayout
            android:id="@+id/one"
            android:layout_below="@id/videopopupmyprice"
            android:layout_marginTop="@dimen/dp_50"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:textColor="#333333"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dp_12"
                android:id="@+id/videopopuptextone"
                android:text="我的h币，12，h币不足？"/>
            <TextView
                android:textColor="#3087ea"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dp_12"
                android:id="@+id/videopopuptexttwo"
                android:text="立即充值"/>
        </LinearLayout>
        <Button
            android:id="@+id/videopopupbuybt"
            android:background="#8251F2"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_width="@dimen/dp_300"
            android:layout_height="@dimen/dp_36"
            android:text="立即支付"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/one"
            android:textSize="@dimen/dp_14"
            android:textColor="#ffffff"
            android:layout_marginBottom="@dimen/dp_20"/>
    </RelativeLayout>
</LinearLayout>