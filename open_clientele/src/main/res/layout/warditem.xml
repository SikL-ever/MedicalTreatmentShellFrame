<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#fff"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:background="#3333"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/titles"
                    android:textSize="16sp"
                    android:text="急询：了解到啦"
                    android:textColor="#000000"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>
            <RelativeLayout
                android:id="@+id/H"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/H_money"
                    android:layout_toLeftOf="@+id/H_num"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/h_currency"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20" />
                <TextView
                    android:id="@+id/H_num"
                    android:layout_marginLeft="@dimen/dp_6"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp_20"
                    android:text="11"
                    android:layout_alignParentBottom="true"
                    android:textColor="#d92109"
                    android:textSize="13sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/times"
            android:textColor="#333333"
            android:text="是否水电费"
            android:textSize="10sp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/contents"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:textSize="12sp"
            android:lineHeight="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_8"
            android:letterSpacing="0.1"
            android:text="是否看见随口说说看会电视空间发挥科技安徽省会计法哈客户端即可"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <RelativeLayout
            android:layout_marginTop="@dimen/dp_16"
            android:layout_width="match_parent"
            android:layout_marginBottom="@dimen/dp_20"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_20"
            >
            <TextView
                android:textSize="10sp"
                android:text="收藏"
                android:layout_toLeftOf="@+id/collect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_toLeftOf="@+id/jainyi"
                android:id="@+id/collect"
                android:layout_marginLeft="@dimen/dp_6"
                android:textSize="10sp"
                android:text="10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/jainyi"
                android:layout_marginLeft="@dimen/dp_22"
                android:textSize="10sp"
                android:layout_toLeftOf="@+id/advise"
                android:text="建议"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_alignParentRight="true"
                android:id="@+id/advise"
                android:layout_marginLeft="@dimen/dp_6"
                android:textSize="10sp"
                android:text="1000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </LinearLayout>


</RelativeLayout>