    <ImageView
        android:id="@+id/fanhui"
        android:layout_width="@dimen/dp_32"
        android:layout_height="@dimen/dp_32"
        android:layout_marginTop="@dimen/dp_32"
        android:layout_marginLeft="@dimen/dp_12"
        android:src="@drawable/common_icon_white_n"/>
    <EditText
        android:id="@+id/edit_item"
        android:layout_toRightOf="@+id/fanhui"
        android:layout_toLeftOf="@+id/sousuo1"
        android:layout_width="match_parent"
        android:layout_alignBottom="@+id/fanhui"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@drawable/shouye"
        android:hint="病症、药品名称、医生姓名"
        android:textCursorDrawable="@null"
        android:textColorHint="#F2F2F2"
        android:textSize="12sp"
        android:textColor="#fff"
        android:layout_height="@dimen/dp_32" />
    <TextView
        android:id="@+id/sousuo1"
        android:layout_width="@dimen/dp_32"
        android:layout_height="@dimen/dp_32"
        android:layout_marginRight="@dimen/dp_12"
        android:button="@null"
        android:text="搜索"
        android:textSize="15sp"
        android:gravity="center"
        android:textColor="#3087EA"
        android:layout_alignBottom="@+id/edit_item"
        android:layout_alignParentRight="true"/>
    <View
        android:id="@+id/xian"
        android:layout_below="@+id/sousuo1"
        android:layout_marginTop="@dimen/dp_20"
        android:background="#F2F2F2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_4"/>
    <LinearLayout
        android:id="@+id/weizhaodao"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/xian"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="-90dp"
            android:src="@drawable/no_search_message"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="抱歉！没有找到“  ”的相关信息"
            android:textColor="#000"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/yizhaodao"
        android:layout_below="@+id/xian"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
