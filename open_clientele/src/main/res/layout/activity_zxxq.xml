<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ZxxqActivity">
    <RelativeLayout
        android:id="@+id/aaaa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/dp_10"
        android:background="#fff">
        <ImageView
            android:id="@+id/images_tx2"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginTop="32dp"
            android:layout_marginLeft="12dp"
            android:background="@drawable/common_icon_white_n"/>
        <TextView
            android:id="@+id/edit"
            android:layout_toLeftOf="@+id/xiaoxi"
            android:layout_toRightOf="@id/images_tx2"
            android:layout_alignBottom="@+id/images_tx2"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_marginRight="10dp"
            android:background="#00ff0000"
            android:text="资讯详情"
            android:gravity="center"
            android:textCursorDrawable="@null"
            android:textSize="18sp"
            android:textColor="#000"
            android:layout_height="32dp" />
        <CheckBox
            android:id="@+id/xiaoxi"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginRight="12dp"
            android:button="@null"
            android:background="@drawable/sele2"
            android:layout_alignBottom="@+id/edit"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <ScrollView
        android:layout_below="@+id/aaaa"
        android:layout_marginTop="@dimen/dp_6"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"
        android:paddingLeft="@dimen/dp_20"
        android:paddingRight="@dimen/dp_20"
        android:paddingTop="@dimen/dp_10"
        android:orientation="vertical">
        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_16"
            android:textColor="#333333"
            />
        <LinearLayout
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="10sp"
                android:text="123"
                android:textColor="#333333"/>
            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="10sp"
                android:textColor="#333333"
                android:text="123"
                android:layout_marginLeft="@dimen/dp_8"/>
            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="10sp"
                android:textColor="#333333"
                android:layout_marginLeft="@dimen/dp_10"/>
        </LinearLayout>
        <WebView
            android:id="@+id/webView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </WebView>
    </LinearLayout>
    </ScrollView>
    <ImageView
        android:id="@+id/fenxiang"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"
        android:layout_marginBottom="@dimen/dp_40"
        android:layout_marginRight="@dimen/dp_20"
        android:padding="@dimen/dp_11"
        android:src="@drawable/common_button_share_n"
        android:background="@drawable/yuanjiao"/>
    <ImageView
        android:id="@+id/shoucang"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"
        android:layout_above="@+id/fenxiang"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_20"
        android:padding="@dimen/dp_11"
        android:background="@drawable/yuanjiao"
        android:layout_marginBottom="@dimen/dp_16"
        android:src="@drawable/shoucang"/>
</RelativeLayout>