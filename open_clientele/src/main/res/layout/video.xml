<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/videorecycler">
    </androidx.recyclerview.widget.RecyclerView>
    <androidx.recyclerview.widget.RecyclerView
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/videotoprecycler">
    </androidx.recyclerview.widget.RecyclerView>
    <ImageView
        android:id="@+id/videoimage"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_30"
        android:layout_width="@dimen/dp_15"
        android:layout_height="@dimen/dp_88"
        android:background="@drawable/drop_down"/>

    <com.wd.health.util.BarrageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_100"
        android:id="@+id/vidoebarr"
        android:layout_marginTop="@dimen/dp_40"
        app:allow_repeat="true"
        app:border_color="@color/colorAccent"
        app:line_height="20dp"
        app:max_text_size="20"
        app:min_text_size="14"
        app:random_color="false"
        app:text_left_padding="90"
        app:text_right_padding="90"
        app:size="200">
    </com.wd.health.util.BarrageView>
    <RelativeLayout
        android:alpha="0.5"
        android:id="@+id/videolayout"
        android:background="#000000"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_52"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/the_slide_gesture"
            android:id="@+id/videosupernatantimage"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="上滑查看下一个视频"
            android:textColor="#fff"
            android:textSize="@dimen/dp_14"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/videosupernatantimage"
            android:layout_marginTop="@dimen/dp_20"/>
        <ImageView
            android:layout_marginTop="@dimen/dp_56"
            android:layout_below="@id/videosupernatantimage"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_52"
            android:layout_centerHorizontal="true"
            android:background="@drawable/know"
            android:id="@+id/videosupernatantimagetwo"
            />
    </RelativeLayout>

</RelativeLayout>