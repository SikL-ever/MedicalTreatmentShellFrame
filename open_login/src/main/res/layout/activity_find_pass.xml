<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.FindPassActivity"
    android:background="@drawable/login_bg">
    <RelativeLayout
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_30">
        <ImageView
            android:id="@+id/findfinish"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_20"
            android:background="@drawable/common_icon_back_white_n"
            android:layout_width="@dimen/dp_17"
            android:layout_height="@dimen/dp_15" />
        <TextView
            android:textSize="18sp"
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="忘记密码"
            android:textColor="#fff"
            android:gravity="center"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_marginTop="@dimen/dp_130"
        android:layout_marginLeft="@dimen/dp_48"
        android:layout_marginRight="@dimen/dp_48"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_124"
        android:background="@drawable/login_lin_item_three"
        android:id="@+id/one"
        android:orientation="vertical" />
    <LinearLayout
        android:layout_marginTop="@dimen/dp_125"
        android:layout_below="@+id/log"
        android:layout_marginLeft="@dimen/dp_44"
        android:layout_marginRight="@dimen/dp_44"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_124"
        android:background="@drawable/login_lin_item_two"
        ></LinearLayout>
    <LinearLayout
        android:layout_marginTop="@dimen/dp_120"
        android:layout_below="@+id/log"
        android:layout_marginLeft="@dimen/dp_40"
        android:layout_marginRight="@dimen/dp_40"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_124"
        android:background="@drawable/login_lin_item"
        android:orientation="vertical"
        >
        <LinearLayout
            android:background="@drawable/layout_item"
            android:layout_marginTop="@dimen/dp_27"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15">
            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_17"
                android:background="@drawable/login_icon_mail_n"/>
            <EditText
                android:id="@+id/findemailtext"
                android:layout_marginLeft="@dimen/dp_5"
                android:hint="请输入邮箱账号"
                android:background="@null"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/dp_30"
                />
            <Button
                android:textColor="#fff"
                android:id="@+id/findbt"
                android:textSize="@dimen/dp_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="获取验证码"
                android:background="@drawable/welcometext_item"/>
        </LinearLayout>
        <LinearLayout
            android:background="@drawable/layout_item"
            android:layout_marginTop="@dimen/dp_27"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15">
            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_width="@dimen/dp_17"
                android:layout_height="@dimen/dp_17"
                android:background="@drawable/register_icon_verification_code_n"/>
            <EditText
                android:id="@+id/findverificationcodetext"
                android:layout_marginLeft="@dimen/dp_8"
                android:hint="请输入验证码"
                android:background="@null"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_30"
                />
        </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/findnext"
        android:layout_marginBottom="@dimen/dp_60"
        android:layout_alignParentBottom="true"
        android:textColor="#3287EA"
        android:layout_marginLeft="@dimen/dp_40"
        android:layout_marginRight="@dimen/dp_40"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="下一步"
        android:background="@drawable/findpass_item"/>
</RelativeLayout>